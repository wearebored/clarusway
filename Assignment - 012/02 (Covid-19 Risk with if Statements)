age = input("75 yaşından büyük bir sigara bağımlısı mısınız?(Evet/Hayır)").capitalize()
chronic = input("Ağır bir kronik hastalığınız var mı?(Evet/Hayır)").capitalize()
immune = input("Bağışıklık sisteminiz çok mu zayıf ?(Evet/Hayır)").capitalize()
if age == "Evet":
    age = True
else:
    age = False
if chronic == "Evet":
    chronic = True
else:
    chronic = False
if immune == "Evet":
    immune = True
else:
    immune = False
if age or chronic or immune:
    print("Riskli gruptasınız")
else:
    print("Riskli grupta değilsiniz")
